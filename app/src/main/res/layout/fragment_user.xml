<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/text_margin_big"/>

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/credibility_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_user_text_view"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="@dimen/text_margin_big"/>

    <TextView
        android:id="@+id/credibility_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_picture" />

    <include
        android:id="@+id/user_info"
        layout="@layout/custom_user_info"
        android:layout_marginTop="@dimen/logo_text_margin_sides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        />

    <include
        android:id="@+id/ideas_info"
        layout="@layout/custom_user_info"
        android:layout_marginTop="@dimen/logo_text_margin_sides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_info"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        />

    <include
        android:id="@+id/ideas_category"
        layout="@layout/custom_user_info"
        android:layout_marginTop="@dimen/logo_text_margin_sides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ideas_info"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        />

    <include
        android:id="@+id/ideas_available"
        layout="@layout/custom_user_info"
        android:layout_marginTop="@dimen/logo_text_margin_sides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ideas_category"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        />

    <include
        android:id="@+id/quote"
        layout="@layout/custom_user_info"
        android:layout_marginTop="@dimen/logo_text_margin_sides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ideas_available"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        />

    <Button
        android:id="@+id/mini_pitch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin_big"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/book_meeting_button"
        app:layout_constraintTop_toBottomOf="@+id/quote" />

    <Button
        android:id="@+id/book_meeting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin_big"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mini_pitch_button"
        app:layout_constraintTop_toBottomOf="@+id/quote" />


</androidx.constraintlayout.widget.ConstraintLayout>