<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_big"
        android:textSize="@dimen/about_text_size"/>

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/credibility_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_user_text_view"
        android:layout_marginLeft="@dimen/margin_bigger"
        android:src="@mipmap/ic_launcher"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="@dimen/margin_big"/>

    <TextView
        android:id="@+id/credibility_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture"
        app:layout_constraintStart_toEndOf="@id/profile_picture"
        android:layout_marginLeft="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="@+id/profile_picture" />

    <ImageView
        android:id="@+id/profile_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        android:layout_marginTop="@dimen/margin_big"
        android:src="@drawable/home_tab"
        />

    <ImageView
        android:id="@+id/profile_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_icon_1"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/home_tab"
        />

    <ImageView
        android:id="@+id/profile_icon_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_icon_2"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/home_tab"
        />

    <ImageView
        android:id="@+id/profile_icon_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_icon_3"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/home_tab"
        />

    <ImageView
        android:id="@+id/profile_icon_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_icon_4"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/home_tab"
        />

    <TextView
        android:id="@+id/user_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_icon_1"
        app:layout_constraintTop_toTopOf="@id/profile_icon_1"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon_1"
        android:textSize="@dimen/user_info_text_size"
        android:layout_marginLeft="@dimen/margin_small"
        />

    <TextView
        android:id="@+id/ideas_info_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_icon_2"
        app:layout_constraintTop_toTopOf="@id/profile_icon_2"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon_2"
        android:textSize="@dimen/user_info_text_size"
        android:layout_marginLeft="@dimen/margin_small"
        />

    <TextView
        android:id="@+id/ideas_category_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_icon_3"
        app:layout_constraintTop_toTopOf="@id/profile_icon_3"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon_3"
        android:textSize="@dimen/user_info_text_size"
        android:layout_marginLeft="@dimen/margin_small"
        />

    <TextView
        android:id="@+id/ideas_available_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_icon_4"
        app:layout_constraintTop_toTopOf="@id/profile_icon_4"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon_4"
        android:textSize="@dimen/user_info_text_size"
        android:layout_marginLeft="@dimen/margin_small"
        />

    <TextView
        android:id="@+id/quote_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_icon_5"
        app:layout_constraintTop_toTopOf="@id/profile_icon_5"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon_5"
        android:textSize="@dimen/user_info_text_size"
        android:layout_marginLeft="@dimen/margin_small"
        />

    <Button
        android:id="@+id/mini_pitch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginLeft="@dimen/margin_big"
        android:text="@string/mini_pitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/book_meeting_button"
        app:layout_constraintTop_toBottomOf="@+id/profile_icon_5" />

    <Button
        android:id="@+id/book_meeting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_big"
        android:text="@string/book_meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mini_pitch_button"
        app:layout_constraintTop_toTopOf="@id/mini_pitch_button" />


</androidx.constraintlayout.widget.ConstraintLayout>